  <script>
    function debounce(func, wait) {
      let timeout;
      return function executedFunction(...args) {
        const later = () => {
          clearTimeout(timeout);
          func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
      };
    }

    class ShopSearch {
      constructor() {
        this.searchInput = document.getElementById('shopSearch');
        this.searchButton = document.getElementById('searchButton');
        this.searchLoading = document.getElementById('searchLoading');
        this.searchContainer = document.getElementById('searchContainer');
        this.debouncedSearch = debounce(this.performSearch.bind(this), 500);
        this.init();
      }

      init() {
        if (this.searchInput) {
          this.searchInput.addEventListener('input', (e) => {
            const query = e.target.value;
            this.searchContainer.classList.toggle('focused', !!query.length);
            if (query.length > 0) {
              this.showLoading();
            } else {
              this.hideLoading();
            }
            this.debouncedSearch(query);
          });

          this.searchInput.addEventListener('focus', () => {
            this.searchContainer.classList.add('focused');
          });

          this.searchInput.addEventListener('blur', () => {
            if (!this.searchInput.value.trim()) {
              this.searchContainer.classList.remove('focused');
            }
          });

          this.searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
              e.preventDefault();
              this.hideLoading();
              this.performSearch(e.target.value);
            }
          });
        }

        if (this.searchButton) {
          this.searchButton.addEventListener('click', () => {
            const query = this.searchInput.value;
            this.hideLoading();
            this.performSearch(query);
          });
        }
      }

      performSearch(query) {
        try {
          const currentUrl = new URL(window.location.href);
          if (query.trim()) {
            currentUrl.searchParams.set('search', query.trim());
          } else {
            currentUrl.searchParams.delete('search');
          }
          currentUrl.searchParams.set('page', '1');
          window.location.href = currentUrl.toString();
        } catch (error) {
          console.error('Search error:', error);
          this.hideLoading();
        }
      }

      showLoading() {
        if (this.searchLoading) {
          this.searchLoading.classList.remove('hidden');
        }
        if (this.searchButton) {
          this.searchButton.style.opacity = '0.7';
        }
      }

      hideLoading() {
        if (this.searchLoading) {
          this.searchLoading.classList.add('hidden');
        }
        if (this.searchButton) {
          this.searchButton.style.opacity = '1';
        }
      }
    }

    function attachAnimations() {
      const observerOptions = { threshold: 0.1, rootMargin: '0px 0px -50px 0px' };
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-visible');
          }
        });
      }, observerOptions);

      document.querySelectorAll('[class*="animate-"]').forEach((el) => observer.observe(el));
    }

    function setupMobileNavigation() {
      const toggleButton = document.querySelector('.mobile-menu-toggle');
      const overlay = document.querySelector('.mobile-nav-overlay');
      const nav = document.querySelector('.main-nav');

      const closeMenu = () => {
        nav.classList.remove('active');
        overlay.classList.remove('active');
        toggleButton.classList.remove('active');
        document.body.classList.remove('menu-open');
      };

      const openMenu = () => {
        nav.classList.add('active');
        overlay.classList.add('active');
        toggleButton.classList.add('active');
        document.body.classList.add('menu-open');
      };

      toggleButton.addEventListener('click', () => {
        if (nav.classList.contains('active')) {
          closeMenu();
        } else {
          openMenu();
        }
      });

      overlay.addEventListener('click', closeMenu);

      document.querySelectorAll('.nav-link').forEach((link) => {
        link.addEventListener('click', () => {
          if (window.innerWidth <= 768) {
            closeMenu();
          }
        });
      });

      window.addEventListener('resize', () => {
        if (window.innerWidth > 768) {
          closeMenu();
        }
      });
    }

    function setupSidebarToggle() {
      const toggleButton = document.querySelector('.sidebar-toggle');
      const sidebarContent = document.querySelector('.sidebar-content');

      if (!toggleButton || !sidebarContent) return;

      toggleButton.addEventListener('click', () => {
        const isActive = toggleButton.classList.toggle('active');
        sidebarContent.classList.toggle('active', isActive);
        toggleButton.setAttribute('aria-expanded', String(isActive));
        toggleButton.querySelector('i.fas.fa-chevron-down').style.transform = isActive ? 'rotate(180deg)' : 'rotate(0deg)';
      });

      if (window.innerWidth <= 768) {
        sidebarContent.classList.remove('active');
      }
    }

    function setupDropdown() {
      const dropdown = document.querySelector('.dropdown');
      if (!dropdown) return;

      const accountLink = dropdown.querySelector('.account-link');
      accountLink.addEventListener('click', (e) => {
        e.preventDefault();
        dropdown.classList.toggle('show');
      });

      document.addEventListener('click', (e) => {
        if (!dropdown.contains(e.target)) {
          dropdown.classList.remove('show');
        }
      });
    }

    function initializePriceSlider() {
      const slider = document.getElementById('price-slider');
      const sliderFill = document.getElementById('sliderFill');
      const sliderValueBubble = document.getElementById('sliderValueBubble');
      const dynamicPrice = document.getElementById('dynamic-price');
      const hiddenInput = document.getElementById('price-range-input');
      const quickPickButtons = document.querySelectorAll('.price-quick-picks button');
      const minPriceDisplay = document.getElementById('min-price-display');

      if (!slider || !sliderFill || !sliderValueBubble || !dynamicPrice || !hiddenInput) return;

      const minPrice = Number(slider.min) || 100;
      const urlParams = new URLSearchParams(window.location.search);
      const priceRangeParam = urlParams.get('priceRange');
      let maxPrice = Number(slider.max) || 10000;

      if (priceRangeParam) {
        const [minStr, maxStr] = priceRangeParam.split('-');
        const parsedMin = parseInt(minStr, 10);
        const parsedMax = parseInt(maxStr, 10);
        if (!Number.isNaN(parsedMin)) {
          minPriceDisplay.textContent = `₹${parsedMin.toLocaleString('en-IN')}`;
        }
        if (!Number.isNaN(parsedMax)) {
          
          
          maxPrice = parsedMax;
        }
      }

      const setQuickPickState = (value) => {
        quickPickButtons.forEach((button) => {
          if (Number(button.dataset.max) === value) {
            button.classList.add('active');
          } else {
            button.classList.remove('active');
          }
        });
      };

      const updateSliderUI = (value) => {
        const clampedValue = Math.min(Math.max(value, minPrice), Number(slider.max));
        slider.value = clampedValue;
        const percentage = ((clampedValue - minPrice) / (slider.max - minPrice)) * 100;
        sliderFill.style.width = `${percentage}%`;
        sliderValueBubble.style.left = `calc(${percentage}% + (${percentage * -0.15}px))`;
        sliderValueBubble.querySelector('.value-text').textContent = `₹${clampedValue.toLocaleString('en-IN')}`;
        dynamicPrice.textContent = `₹${clampedValue.toLocaleString('en-IN')}`;
        hiddenInput.value = `${minPrice}-${clampedValue}`;
        setQuickPickState(clampedValue);
      };

      updateSliderUI(maxPrice);

      slider.addEventListener('input', () => {
        updateSliderUI(Number(slider.value));
      });

      slider.addEventListener('change', () => {
        updateSliderUI(Number(slider.value));
        setTimeout(() => {
          document.getElementById('filter-form').submit();
        }, 350);
      });

      quickPickButtons.forEach((button) => {
        button.addEventListener('click', () => {
          const target = Number(button.dataset.max);
          updateSliderUI(target);
          setTimeout(() => {
            document.getElementById('filter-form').submit();
          }, 350);
        });
      });
    }

    function setupProductHover() {
      document.querySelectorAll('.product-card').forEach((card) => {
        card.addEventListener('mouseenter', function () {
          this.style.transform = 'translateY(-10px) scale(1.02)';
        });
        card.addEventListener('mouseleave', function () {
          this.style.transform = 'translateY(0) scale(1)';
        });
      });
    }

    function setupPaginationAnimation() {
      document.querySelectorAll('.pagination-number').forEach((number, index) => {
        number.style.animationDelay = `${index * 0.05}s`;
      });
    }

    function updateSort(sortValue) {
      const url = new URL(window.location.href);
      url.searchParams.set('sort', sortValue);
      url.searchParams.set('page', '1');
      const sortSelect = document.getElementById('sort-select');
      sortSelect.style.opacity = '0.5';
      window.location.href = url.toString();
    }

    function toggleSection(iconButton) {
      const section = iconButton.closest('.sidebar-section');
      const content = section.querySelector('.price-range');
      const icon = iconButton.querySelector('i');

      if (content.classList.contains('collapsed')) {
        content.classList.remove('collapsed');
        icon.className = 'fas fa-minus';
      } else {
        content.classList.add('collapsed');
        icon.className = 'fas fa-plus';
      }
    }

    window.addEventListener('scroll', () => {
      const backToTop = document.getElementById('backToTop');
      if (window.pageYOffset > 300) {
        backToTop.classList.add('visible');
      } else {
        backToTop.classList.remove('visible');
      }
    });

    function scrollToTop() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    const user = <%- JSON.stringify(user) %>;

    async function addToCart(productId, button) {
      if (!user) {
        showToast('Please log in to add items to cart', 'error');
        return;
      }
      try {
        const res = await fetch('/cart', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ productId, variantIndex: 0, quantity: 1 })
        });
        const data = await res.json();
        if (data.success) {
          button.classList.add('success');
          button.innerHTML = '<i class="fas fa-check"></i>';
          showToast('Item added to cart!');
          setTimeout(() => {
            button.classList.remove('success');
            button.innerHTML = '<i class="fas fa-shopping-cart"></i>';
          }, 2000);
        } else {
          showToast(data.message || 'Failed to add to cart', 'error');
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
        showToast('Something went wrong. Try again.', 'error');
      }
    }

    async function addToWishlist(productId, button) {
      if (!user) {
        showToast('Please log in to add items to wishlist', 'error');
        return;
      }
      try {
        const res = await fetch('/wishlist', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ productId })
        });
        const data = await res.json();
        if (data.success) {
          button.classList.add('success');
          button.innerHTML = '<i class="fas fa-check"></i>';
          showToast('Added to wishlist!');
          setTimeout(() => {
            button.classList.remove('success');
            button.innerHTML = '<i class="fas fa-heart"></i>';
          }, 2000);
        } else {
          showToast(data.message || 'Already in wishlist', 'error');
        }
      } catch (error) {
        console.error('Error adding to wishlist:', error);
        showToast('Failed to add to wishlist', 'error');
      }
    }

    function showToast(message, type = 'success') {
      const toast = document.getElementById('successToast');
      const messageElement = toast.querySelector('.toast-message');
      messageElement.textContent = message;
      toast.classList.toggle('error', type === 'error');
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    document.addEventListener('DOMContentLoaded', () => {
      new ShopSearch();
      attachAnimations();
      setupMobileNavigation();
      setupSidebarToggle();
      setupDropdown();
      initializePriceSlider();
      setupProductHover();
      setupPaginationAnimation();
    });

    window.updateSort = updateSort;
    window.toggleSection = toggleSection;
    window.scrollToTop = scrollToTop;
    window.addToCart = addToCart;
    window.addToWishlist = addToWishlist;
  </script>
</body>
