<div class="profile-sidebar animate-slide-in-left">
  <div class="profile-card">
    <div class="profile-avatar-section">
      <div class="avatar-container">
        <img id="profileAvatar" src="/images/10001.jpg" alt="Profile Avatar" class="profile-avatar">
        <div class="avatar-overlay">
          <i class="fas fa-camera"></i>
          <span>Change Photo</span>
        </div>
        <input type="file" id="avatarInput" accept="image/*" style="display: none;">
      </div>
      <div class="profile-info">
        <h2 class="profile-name"><%= typeof user !== 'undefined' ? user.name : 'John Doe' %></h2>
        <p class="profile-email"><%= typeof user !== 'undefined' ? user.email : 'john.doe@example.com' %></p>
        <div class="profile-status">
          <span class="status-badge active">
            <i class="fas fa-circle"></i>
            Active Member
          </span>
        </div>
      </div>
    </div>
  </div>

  <nav class="profile-nav">
    <ul class="nav-list">
      <li class="nav-item">
        <a href="/profile" class="nav-link <%= currentPage === 'profile' ? 'active' : '' %>" data-tab="personal-info">
          <i class="fas fa-user"></i>
          <span>Personal Information</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/orders" class="nav-link <%= currentPage === 'orders' ? 'active' : '' %>" data-tab="orders">
          <i class="fas fa-shopping-bag"></i>
          <span>Orders</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/address" class="nav-link <%= currentPage === 'addresses' ? 'active' : '' %>" data-tab="addresses">
          <i class="fas fa-map-marker-alt"></i>
          <span>Addresses</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/wishlist" class="nav-link <%= currentPage === 'wishlist' ? 'active' : '' %>" data-tab="wishlist">
          <i class="fas fa-heart"></i>
          <span>Wishlist</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/security" class="nav-link <%= currentPage === 'security' ? 'active' : '' %>"  data-tab="security">
          <i class="fas fa-shield-alt"></i>
          <span>Security</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/wallet" class="nav-link <%= currentPage === 'wallet' ? 'active' : '' %>" data-tab="notifications">
          <i class="fas fa-wallet w-5 h-5"></i>
          <span>Wallet</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/logout" class="nav-link" data-tab="logout">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
      </li>
    </ul>
  </nav>
</div>
